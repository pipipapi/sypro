<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- tuser_trole -->

<mapper namespace="sy.model.po.TuserPo">

    <resultMap id="ExtendResultMap" extends="BaseResultMap" type="sy.model.po.TuserPo">
        <collection property="roles" column="ID" javaType="java.util.Set" select="sy.model.po.TuserTrolePo.selectMyRoles"/>
    </resultMap>

    <select id="countBetweenMonths" resultMap="ExtendResultMap" parameterType="java.util.Map">
        select count(*) from Tuser t where HOUR(t.createdatetime)
        <![CDATA[ >= ]]>
        #{start} and HOUR(t.createdatetime)
        <![CDATA[ < ]]>
        #{end}
    </select>

    <select id="selectOneBringRole" resultMap="ExtendResultMap">
        SELECT * from Tuser t
        where t.id = #{id}
    </select>


</mapper>